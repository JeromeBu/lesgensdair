<h1>Achat d'un <%= @order.product_name %></h1>
<%= form_tag order_payments_path(@order) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
    </label>
  </article>

<!-- changer l'email, car pas de current user logged in -->

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Product"
    data-email="<%= @order.email %>"
    data-description="Product <%= @order.product_sku %>"
    data-amount="<%= @order.amount_cents %>"
    data-currency="<%= @order.amount.currency %>">
  </script>

<% end %>
